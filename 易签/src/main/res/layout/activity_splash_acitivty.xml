<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    tools:context=".activity.SplashAcitivty">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_log_white"/>

    <LinearLayout
        android:id="@+id/welcome_linear_ctrlbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"

        android:orientation="horizontal">


        <Button

            android:id="@+id/welcome_btn_login_stu"
          style="@style/buttonbg"
            android:text="学生登录"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/welcome_btn_login_tea"
            style="@style/buttonbg"

            android:layout_margin="5dp"


            android:text="@string/welcome_btn_loginteacher"
          />
    </LinearLayout>


</RelativeLayout>
